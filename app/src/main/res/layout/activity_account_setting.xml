<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray"
    android:orientation="vertical">

    <include layout="@layout/base_toolbar_layout" />

    <RelativeLayout
        android:id="@+id/account_info_head_icon_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="10dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="left"
            android:singleLine="true"
            android:text="头像"
            android:textColor="@color/text_gray_dark" />

        <ImageView
            android:id="@+id/account_info_head_icon_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="3dp"
            android:layout_toLeftOf="@+id/item_info_right_arrow"
            android:src="@mipmap/ic_launcher" />


        <ImageView
            android:id="@+id/item_info_right_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_right_arrow" />


    </RelativeLayout>





    <include
        android:id="@+id/account_info_nick_name_setting"
        layout="@layout/item_info_setting_layout" />

    <include
        android:id="@+id/account_info_sex_setting"
        layout="@layout/item_info_setting_layout" />

    <include
        android:id="@+id/account_info_age_setting"
        layout="@layout/item_info_setting_layout" />

    <include
        android:id="@+id/account_info_phone_setting"
        layout="@layout/item_info_setting_layout" />


    <LinearLayout
        android:id="@+id/exit_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/account_exit" />
    </LinearLayout>

</LinearLayout>